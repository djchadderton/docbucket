  <article id="<%= dom_id @post %>">
    <h2><%= @post.title %></h2>
    <p>Created: <%= @post.created_at.strftime("%d %B %Y") %></p>
    <p>Last updated: <%= @post.updated_at.strftime("%d %B %Y") %></p>
    <%= @post.body %>
  </article>
